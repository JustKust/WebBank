@page
@model Bank.Pages.Positions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Должности</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Position.PosId" class="control-label"></label>
                <input asp-for="Position.PosId" class="form-control" />
                <span asp-validation-for="Position.PosId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.PosName" class="control-label"></label>
                <input asp-for="Position.PosName" class="form-control" />
                <span asp-validation-for="Position.PosName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Salary" class="control-label"></label>
                <input asp-for="Position.Salary" class="form-control" />
                <span asp-validation-for="Position.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Responsibilities" class="control-label"></label>
                <input asp-for="Position.Responsibilities" class="form-control" />
                <span asp-validation-for="Position.Responsibilities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Requirements" class="control-label"></label>
                <input asp-for="Position.Requirements" class="form-control" />
                <span asp-validation-for="Position.Requirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
