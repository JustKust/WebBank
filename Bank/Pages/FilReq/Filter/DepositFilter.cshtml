@page
@model Bank.Pages.FilReq.Filter.DepositFilterModel
@{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Deposit[0].DepName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deposit[0].MinDepTern)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deposit[0].MinDepAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deposit[0].AddCond)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deposit[0].InRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deposit[0].Cur)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Deposit)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinDepTern)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinDepAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddCond)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cur.CurId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
