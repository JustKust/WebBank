@page
@model Bank.Pages.Currencies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Валюты</h1>

<p>
    <a asp-page="Create">Создать новую</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].ExchangeRate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Currency) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExchangeRate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CurId">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.CurId">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.CurId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
