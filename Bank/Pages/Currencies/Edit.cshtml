@page
@model Bank.Pages.Currencies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Валюта</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Currency.CurId" />
            <div class="form-group">
                <label asp-for="Currency.Name" class="control-label"></label>
                <input asp-for="Currency.Name" class="form-control" />
                <span asp-validation-for="Currency.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency.ExchangeRate" class="control-label"></label>
                <input asp-for="Currency.ExchangeRate" class="form-control" />
                <span asp-validation-for="Currency.ExchangeRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
